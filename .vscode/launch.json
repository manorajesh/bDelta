    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'bdel'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=bdel",
                    "--package=bdel"
                ],
                "filter": {
                    "name": "bdel",
                    "kind": "bin"
                }
            },
            //"args": ["apply", "src/source.bin", "src/diff.zip"],
            "args": ["generate", "src/source.bin", "src/new.bin"],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'bdel'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=bdel",
                    "--package=bdel"
                ],
                "filter": {
                    "name": "bdel",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}